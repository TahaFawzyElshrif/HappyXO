<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back3"
    android:layoutDirection="ltr"
    tools:context=".MainActivity2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">
<LinearLayout
    android:id="@+id/TopLayout"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1">
    <androidx.cardview.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_margin="7dp"
        android:layout_gravity="bottom|left"

        app:cardCornerRadius="35dp"
        app:cardElevation="180dp">

    <com.balysv.materialripple.MaterialRippleLayout
        style="@style/menu_buttons_style"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#3D0D6C">
    <ImageButton
        android:id="@+id/about_Button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="about"
        android:tooltipText="about"
        app:srcCompat="@drawable/about"
        tools:layout_editor_absoluteX="186dp"
        tools:layout_editor_absoluteY="116dp" />
    </com.balysv.materialripple.MaterialRippleLayout>
    </androidx.cardview.widget.CardView>
    <ImageView
        android:id="@+id/img1"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_margin="7dp"
        android:src="@drawable/picture7"
        tools:layout_editor_absoluteX="74dp"
        tools:layout_editor_absoluteY="753dp" />
    <androidx.cardview.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_margin="7dp"
        android:layout_gravity="bottom|right"

        app:cardCornerRadius="35dp"
        app:cardElevation="180dp">

    <com.balysv.materialripple.MaterialRippleLayout
        style="@style/menu_buttons_style"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#3D0D6C">
        <ImageButton
            android:id="@+id/AI_Button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="AI"
            android:gravity="fill"
            android:tooltipText="with AI"
            app:srcCompat="@drawable/chatbot"
            tools:layout_editor_absoluteX="74dp"
            tools:layout_editor_absoluteY="116dp" />
    </com.balysv.materialripple.MaterialRippleLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:src="@drawable/picture5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.481" />
        <LinearLayout
            android:id="@+id/BottomLayout"

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"            >
            <androidx.cardview.widget.CardView
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="7dp"
                android:layout_gravity="top"
                app:cardCornerRadius="35dp"
                app:cardElevation="180dp">

            <com.balysv.materialripple.MaterialRippleLayout
                style="@style/menu_buttons_style"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#3D0D6C">
            <ImageButton
            android:id="@+id/Settings"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
            android:src="@drawable/console"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="250dp" />
            </com.balysv.materialripple.MaterialRippleLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="7dp"
                android:layout_gravity="bottom"

                app:cardCornerRadius="35dp"
                app:cardElevation="180dp">

            <com.balysv.materialripple.MaterialRippleLayout
                style="@style/menu_buttons_style"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#3D0D6C">
        <ImageButton
            android:id="@+id/Userutton"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:src="@drawable/programmer"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="112dp" />

            </com.balysv.materialripple.MaterialRippleLayout>
            </androidx.cardview.widget.CardView>



        <ImageView
            android:id="@+id/img3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_margin="7dp"
            android:src="@drawable/picture6"
            tools:layout_editor_absoluteX="268dp"
            tools:layout_editor_absoluteY="708dp" />
        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>